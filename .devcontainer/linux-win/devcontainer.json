{
  "image": "simbricks/simbricks-examples",
  "runArgs": [
    "--platform=linux/amd64",
    "--device=/dev/kvm"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.makefile-tools",
        "mshr-h.veriloghdl",
        "ms-toolsai.jupyter",
        "surfer-project.surfer"
      ]
    }
  },
  "remoteUser": "simbricks",
  "onCreateCommand": "sudo make -C /simbricks convert-images-raw",
  "postStartCommand": "sudo chmod o+rw /dev/kvm ",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/simbricks-examples,type=bind",
  "workspaceFolder": "/workspaces/simbricks-examples"
}
